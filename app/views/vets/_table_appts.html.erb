<table class="table table-borderless">
  <thead>
    <tr>
      <th scope="col">Appointment Details</th>
    </tr>
  </thead>
        <tr>
            <th>Patient</th>
            <th>Date</th>
            <th>Time</th>
            <th>Actions</th>
        </tr>
        <% vet_upcoming_appts(@vet).each do |appt| %>
        
        <tr>
            <td><%= link_to appt.pet.name, pet_path(appt.pet) %></td>
            <td><%= appt_date(appt) %></td>
            <td><%= appt_time(appt) %></td>
            <td><%= link_to "Edit", edit_vet_appointment_path(appt.vet, appt)%> |
              <%= link_to "Delete", appt, method: :delete, data: {confirm: "Are you sure you want to delete this appointment?"}%>
          </td>
        </tr>
    <% end %>
</table>
<br><br>