<h2>Vet Registration Form</h2>
<% if @vet.errors.any? %>
   <div id="error_explanation">
     <h4>
       <%= pluralize(@vet.errors.count, "error") %>
       prohibited this post from being saved:
     </h4>
     <ul>
     <% @vet.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
     <div id="closebtn" onclick="this.parentElement.style.display='none';">&times;</div>
   </div>
 <% end %>

<%= form_for @vet do |f| %>
    <%= f.label "First Name:" %>
    <%= f.text_field :first_name %>
    <br>
    <%= f.label "Last Name:" %>
    <%= f.text_field :last_name %>
    <br>
    <%= f.label "Email:" %>
    <%= f.text_field :email %>
    <br>
    <%= f.label "Password:" %>
    <%= f.password_field :password %>
    <br>
    <%= f.label "Password Confirmation:"%>
    <%= f.password_field :password_confirmation %>
    <br>
    <%= f.label "Clinic:"%>
    <%= collection_select :vet, :clinic_id, Clinic.all, :id, :name, {:prompt => "Please select your practice location"} %>
    <br><br>

    <%= f.submit "Register" %>
<% end %>
