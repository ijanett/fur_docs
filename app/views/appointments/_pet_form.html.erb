<%= form_for @appointment do |f| %>
    <%= f.hidden_field :pet_id %>
    <div class="form-group">
        <%= f.grouped_collection_select :vet_id, Clinic.all, :vets, :name, :id, :full_dr_name, {:prompt => "Please choose a vet"}, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label "Date:" %>
        <%= f.date_field :date, class: "form-control", placeholder: "yyyy/mm/dd" %>
    </div>
    <div class="form-group">
        <%= f.label "Time:" %>
        <%= f.time_field :time, class: "form-control", placeholder: "--:-- --" %>
    </div>
    <div class="actions">
        <%= f.submit "Submit", class: "btn btn-info" %>
    </div>
<% end %>