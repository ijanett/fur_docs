<%= form_for @appointment do |f| %>
    <%= f.hidden_field :vet_id %>
    <%= f.label "Patient:" %>
    <%= f.select :pet_id, grouped_pets_for_select(params[:pet_id]), {:prompt => "Please choose a patient"} %>
    <br>
    <%= f.label "Date:" %>
    <%= f.date_field :date %>
    <br>
    <%= f.label "Time:" %>
    <%= f.time_field :time %>
    <br>
    <%= f.submit "Submit" %>
<% end %>