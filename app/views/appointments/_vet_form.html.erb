<%= form_for @appointment do |f| %>
    <%= f.hidden_field :vet_id %>
    <%= f.label "Patient:" %>
    <%= f.collection_select :pet_id, Pet.all, :id, :name, {:prompt => "Please choose your patient"} %>
    <%= f.label "Date:" %>
    <%= f.date_field :date %>
    <%= f.label "Time:" %>
    <%= f.time_field :time %>
    <%= f.submit "Submit" %>
<% end %>