<% if @chart.errors.any? %>
   <div id="error_explanation">
     <h4>
       <%= pluralize(@chart.errors.count, "error") %>
       prohibited this post from being saved:
     </h4>
     <ul>
     <% @chart.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %>
     </ul>
     <div id="closebtn" onclick="this.parentElement.style.display='none';">&times;</div>
   </div>
 <% end %>