<%= render 'form_errors'%>

<%= form_for @chart do |f| %>
    <%= f.hidden_field :vet_id %>
    <%= f.label "Patient:"%>
    <%= f.select :pet_id, grouped_pets_for_select(params[:pet_id]), {:prompt => "Please choose a patient"} %>
    <br><br>
    <%= f.label "Check all that apply:"%>
    <br>
    <%= f.label :vaccination %>
    <%= f.check_box :vaccination %>
    <%= f.label :medication %>
    <%= f.check_box :medication %>
    <%= f.label :diagnosis %>
    <%= f.check_box :diagnosis %>
    <br><br>
    <%= f.label "Notes:" %>
    <br>
    <%= f.text_area :note %>
    <br>
    <%= f.submit submit_text %>
<% end %>